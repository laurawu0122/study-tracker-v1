{{!-- 兑换记录页面 --}}
<div class="min-h-screen bg-gray-50 dark:bg-gray-900">
  <div class="container mx-auto px-4 py-8">
    <!-- 页面标题 -->
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-gray-800 dark:text-white mb-2">
        📋 兑换记录
      </h1>
      <p class="text-gray-600 dark:text-gray-300">
        查看你的所有兑换历史
      </p>
    </div>

    <!-- 筛选器 -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 mb-8">
      <div class="flex flex-col sm:flex-row gap-4">
        <div class="flex-1">
          <input type="text" id="searchInput" placeholder="搜索商品名称..." autocomplete="off" 
                 class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 dark:bg-gray-700 dark:text-white">
        </div>
        <div class="flex gap-2 items-center">
          <select id="statusFilter" class="px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 dark:bg-gray-700 dark:text-white">
            <option value="">全部状态</option>
            <option value="pending">待审核</option>
            <option value="approved">已通过</option>
            <option value="rejected">已拒绝</option>
            <option value="completed">已完成</option>
          </select>
          <button id="refreshBtn" class="px-4 py-2 bg-green-600 hover:bg-green-700 text-white rounded-md">
            <i class="fas fa-sync-alt"></i>
          </button>
          <!-- 实时更新状态指示器 -->
          <div id="autoRefreshIndicator" class="flex items-center text-sm text-gray-500 dark:text-gray-400">
            <div class="w-2 h-2 bg-green-500 rounded-full mr-2 animate-pulse"></div>
            <span>自动更新中</span>
          </div>
        </div>
      </div>
    </div>

    <!-- 记录列表 -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
        <h4 class="text-lg font-medium text-gray-900 dark:text-white">兑换记录</h4>
      </div>
      <div id="recordsList" class="divide-y divide-gray-200 dark:divide-gray-700">
        <!-- 动态加载记录 -->
      </div>
      
      <!-- 分页 -->
      <div id="pagination" class="hidden">
        <!-- 分页控件 -->
      </div>
    </div>

    <!-- 加载状态 -->
    <div id="loadingState" class="text-center py-8 hidden">
      <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-green-600"></div>
      <p class="mt-2 text-gray-600 dark:text-gray-300">加载中...</p>
    </div>

    <!-- 空状态 -->
    <div id="emptyState" class="text-center py-8 hidden">
      <div class="text-6xl mb-4">📝</div>
      <h3 class="text-xl font-semibold text-gray-800 dark:text-white mb-2">暂无兑换记录</h3>
      <p class="text-gray-600 dark:text-gray-300">快去兑换一些商品吧！</p>
      <a href="/points-exchange" class="inline-block mt-4 px-6 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg transition-colors duration-300">
        去兑换
      </a>
    </div>
  </div>
</div>

<script src="/assets/js/exchange-records.js"></script> 