{{!-- 学习记录页面 - Ghost风格响应式设计 --}}
<div class="min-h-screen bg-gray-50 dark:bg-gray-900" id="sessionsContainer">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 sm:py-8 lg:py-12">
    
    <!-- 页面标题区域 -->
    <div class="mb-8 sm:mb-12">
      <h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900 dark:text-white mb-2">
        学习记录管理
      </h1>
      <p class="text-gray-600 dark:text-gray-400 text-sm sm:text-base">
        记录和管理你的学习进度，追踪学习时间
      </p>
    </div>

    <!-- 统计卡片区域 -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-sm border border-gray-200 dark:border-gray-700 card-hover">
        <div class="flex items-center">
          <div class="p-3 bg-blue-100 dark:bg-blue-900/30 rounded-lg">
            <span class="text-2xl">📊</span>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600 dark:text-gray-400">总学习次数</p>
            <p class="text-2xl font-bold text-gray-900 dark:text-white" id="totalSessionsCount">0</p>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-sm border border-gray-200 dark:border-gray-700 card-hover">
        <div class="flex items-center">
          <div class="p-3 bg-green-100 dark:bg-green-900/30 rounded-lg">
            <span class="text-2xl">⏱️</span>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600 dark:text-gray-400">总学习时间</p>
            <p class="text-2xl font-bold text-gray-900 dark:text-white" id="totalMinutesCount">0分钟</p>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-sm border border-gray-200 dark:border-gray-700 card-hover">
        <div class="flex items-center">
          <div class="p-3 bg-purple-100 dark:bg-purple-900/30 rounded-lg">
            <span class="text-2xl">📅</span>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600 dark:text-gray-400">学习天数</p>
            <p class="text-2xl font-bold text-gray-900 dark:text-white" id="totalDaysCount">0天</p>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-gray-800 rounded-xl p-6 shadow-sm border border-gray-200 dark:border-gray-700 card-hover">
        <div class="flex items-center">
          <div class="p-3 bg-orange-100 dark:bg-orange-900/30 rounded-lg">
            <span class="text-2xl">📈</span>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600 dark:text-gray-400">平均每日</p>
            <p class="text-2xl font-bold text-gray-900 dark:text-white" id="avgMinutesCount">0分钟</p>
          </div>
        </div>
      </div>
    </div>

    <!-- 1. 添加新记录区域 -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 mb-8 sm:mb-12">
      <div class="p-6 sm:p-8">
        <div class="flex items-center mb-6">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center">
              <span class="text-blue-600 dark:text-blue-400 text-lg">📝</span>
            </div>
          </div>
          <div class="ml-4">
            <h2 class="text-lg sm:text-xl font-semibold text-gray-900 dark:text-white">添加新记录</h2>
            <p class="text-sm text-gray-500 dark:text-gray-400">填写学习信息，系统会自动计算时长</p>
          </div>
        </div>

        <!-- 移动端：垂直表单布局 -->
        <div class="block sm:hidden">
          <form class="space-y-4">
                <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">学习日期</label>
              <input type="date" id="inputDate" class="w-full border border-gray-300 dark:border-gray-600 rounded-lg px-4 py-3 text-sm dark:bg-gray-700 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent h-12" />
                </div>
                
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">学习项目</label>
              <select id="inputProject" class="w-full border border-gray-300 dark:border-gray-600 rounded-lg px-4 py-3 text-sm dark:bg-gray-700 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent h-12">
                <option value="">选择学习项目</option>
                <!-- 项目选项将动态加载 -->
              </select>
              <input type="text" id="inputProjectCustom" class="w-full border border-gray-300 dark:border-gray-600 rounded-lg px-4 py-3 mt-2 text-sm hidden dark:bg-gray-700 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent h-12" placeholder="输入自定义项目名称" />
                    </div>
                    
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">开始时间</label>
                <input type="time" id="inputStartTime" class="w-full border border-gray-300 dark:border-gray-600 rounded-lg px-4 py-3 text-sm dark:bg-gray-700 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent h-12" />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">结束时间</label>
                <input type="time" id="inputEndTime" class="w-full border border-gray-300 dark:border-gray-600 rounded-lg px-4 py-3 text-sm dark:bg-gray-700 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent h-12" />
                    </div>
                </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">学习时长</label>
              <input type="text" id="inputDuration" class="w-full border border-gray-300 dark:border-gray-600 rounded-lg px-4 py-3 text-sm dark:bg-gray-700 dark:text-white bg-gray-50 dark:bg-gray-600 cursor-not-allowed text-center font-medium h-12" placeholder="自动计算" readonly />
            </div>
            
            <button type="button" id="addRecordBtn" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-6 rounded-lg transition-colors duration-200 text-sm h-12">
              添加记录
            </button>
          </form>
        </div>

        <!-- 桌面端：一行五列横向表单布局 -->
        <div class="hidden sm:block">
          <form class="flex flex-wrap items-end gap-4">
            <!-- 学习日期 -->
            <div class="flex-1 min-w-0">
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2 text-center">学习日期</label>
              <input type="date" id="inputDateDesktop" class="w-full border border-gray-300 dark:border-gray-600 rounded-md px-3 py-2 text-sm dark:bg-gray-700 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent cursor-pointer h-10" />
            </div>
            
            <!-- 学习项目 -->
            <div class="flex-1 min-w-0">
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2 text-center">学习项目</label>
              <select id="inputProjectDesktop" class="w-full border border-gray-300 dark:border-gray-600 rounded-md px-3 py-2 text-sm dark:bg-gray-700 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent cursor-pointer h-10">
                <option value="">选择项目</option>
                <!-- 项目选项将动态加载 -->
              </select>
              <input type="text" id="inputProjectCustomDesktop" class="w-full border border-gray-300 dark:border-gray-600 rounded-md px-3 py-2 mt-1 text-sm hidden dark:bg-gray-700 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent h-10" placeholder="自定义项目" />
            </div>
            
            <!-- 开始时间 -->
            <div class="flex-1 min-w-0">
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2 text-center">开始时间</label>
              <input type="time" id="inputStartTimeDesktop" class="w-full border border-gray-300 dark:border-gray-600 rounded-md px-3 py-2 text-sm dark:bg-gray-700 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent cursor-pointer h-10" />
            </div>

            <!-- 结束时间 -->
            <div class="flex-1 min-w-0">
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2 text-center">结束时间</label>
              <input type="time" id="inputEndTimeDesktop" class="w-full border border-gray-300 dark:border-gray-600 rounded-md px-3 py-2 text-sm dark:bg-gray-700 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent cursor-pointer h-10" />
            </div>

            <!-- 学习时长 -->
            <div class="flex-1 min-w-0">
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2 text-center">学习时长</label>
              <input type="text" id="inputDurationDesktop" class="w-full border border-gray-300 dark:border-gray-600 rounded-md px-3 py-2 text-sm dark:bg-gray-700 dark:text-white bg-gray-50 dark:bg-gray-600 cursor-not-allowed text-center font-medium h-10" placeholder="自动计算" readonly />
            </div>

            <!-- 添加按钮 -->
            <div class="flex-shrink-0">
              <button type="button" id="addRecordBtnDesktop" class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-md transition-colors duration-200 text-sm h-10">
                添加
              </button>
            </div>
          </form>
        </div>
    </div>
</div>

    <!-- 2. 学习记录区域 -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 mb-8 sm:mb-12">
      <div class="p-6 sm:p-8">
        <div class="flex items-center justify-between mb-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-green-100 dark:bg-green-900 rounded-lg flex items-center justify-center">
                <span class="text-green-600 dark:text-green-400 text-lg">📋</span>
                        </div>
                    </div>
                    <div class="ml-4">
              <h2 class="text-lg sm:text-xl font-semibold text-gray-900 dark:text-white">学习记录</h2>
              <p class="text-sm text-gray-500 dark:text-gray-400">查看和管理你的学习历史</p>
                    </div>
                </div>
            </div>
        
        <!-- 学习记录筛选控制面板 -->
        <div class="mb-6 p-4 bg-gray-50 dark:bg-gray-700 rounded-lg border border-gray-200 dark:border-gray-600">
          <div class="flex flex-wrap items-center gap-3">
            <!-- 时间范围选择器 -->
            <select id="recordsTimeRangeSelector" class="px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white">
              <option value="">所有时间</option>
              <option value="7">最近7天</option>
              <option value="30">最近30天</option>
              <option value="90">最近90天</option>
              <option value="custom">自定义日期范围</option>
            </select>
            
            <!-- 自定义日期范围选择器 -->
            <div id="recordsCustomDateRange" class="hidden flex gap-2">
              <input type="date" id="recordsStartDate" class="px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white">
              <span class="text-gray-500 dark:text-gray-400 self-center">至</span>
              <input type="date" id="recordsEndDate" class="px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white">
            </div>
            
            <!-- 项目筛选选择器 -->
            <select id="recordsProjectFilterSelector" class="px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white">
              <option value="">所有项目</option>
            </select>
            
            <!-- 时长范围选择器 -->
            <select id="recordsDurationFilterSelector" class="px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white">
              <option value="">所有时长</option>
              <option value="0-30">30分钟以下</option>
              <option value="30-60">30-60分钟</option>
              <option value="60-120">1-2小时</option>
              <option value="120+">2小时以上</option>
            </select>
            
            <!-- 应用筛选按钮 -->
            <button id="applyRecordsFiltersBtn" class="px-4 py-2 text-sm bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors duration-200 font-medium">
              应用筛选
            </button>
            
            <!-- 重置筛选按钮 -->
            <button id="resetRecordsFiltersBtn" class="px-4 py-2 text-sm bg-gray-500 hover:bg-gray-600 text-white rounded-lg transition-colors duration-200 font-medium">
              重置
            </button>
          </div>
        </div>
        
        <div id="recordsTableContainer">
          <!-- 表格和分页控件将由JS动态渲染 -->
        </div>
      </div>
    </div>

    <!-- 3. 学习日历区域 -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 mb-8 sm:mb-12">
      <div class="p-6 sm:p-8">
        <div class="flex items-center mb-6">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 bg-purple-100 dark:bg-purple-900 rounded-lg flex items-center justify-center">
              <span class="text-purple-600 dark:text-purple-400 text-lg">📅</span>
            </div>
          </div>
          <div class="ml-4">
            <h2 class="text-lg sm:text-xl font-semibold text-gray-900 dark:text-white">学习日历</h2>
            <p class="text-sm text-gray-500 dark:text-gray-400">点击日期查看当日学习记录详情</p>
          </div>
        </div>
        
        <!-- 日历导航 -->
        <div class="flex items-center justify-between mb-4">
          <button id="prevMonth" class="p-2 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
          </button>
          <h3 id="currentMonth" class="text-lg font-semibold text-gray-900 dark:text-white">2024年6月</h3>
          <button id="nextMonth" class="p-2 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </button>
        </div>
        
        <!-- 日历网格 -->
        <div class="calendar-container">
          <!-- 星期标题 -->
          <div class="grid grid-cols-7 gap-1 mb-2">
            <div class="text-center text-sm font-medium text-gray-500 dark:text-gray-400 py-2">日</div>
            <div class="text-center text-sm font-medium text-gray-500 dark:text-gray-400 py-2">一</div>
            <div class="text-center text-sm font-medium text-gray-500 dark:text-gray-400 py-2">二</div>
            <div class="text-center text-sm font-medium text-gray-500 dark:text-gray-400 py-2">三</div>
            <div class="text-center text-sm font-medium text-gray-500 dark:text-gray-400 py-2">四</div>
            <div class="text-center text-sm font-medium text-gray-500 dark:text-gray-400 py-2">五</div>
            <div class="text-center text-sm font-medium text-gray-500 dark:text-gray-400 py-2">六</div>
          </div>
          
          <!-- 日期网格 -->
          <div id="calendarGrid" class="grid grid-cols-7 gap-1">
            <!-- 日期将由JavaScript动态生成 -->
          </div>
        </div>
      </div>
    </div>

    <!-- 4. 图表分析区域 -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700">
      <div class="p-6 sm:p-8">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 sm:mb-0">图表分析系统</h3>
          
          <!-- 筛选控制面板 -->
          <div class="flex flex-wrap gap-3">
            <!-- 图表类型选择器 -->
            <select id="chartTypeSelector" class="px-4 py-2.5 text-sm border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:text-white transition-colors duration-200 hover:border-gray-400 dark:hover:border-gray-500">
              <option value="line">折线图 - 学习时长趋势</option>
              <option value="bar">柱状图 - 每日学习统计</option>
            </select>
            
            <!-- 时间范围选择器 -->
            <select id="timeRangeSelector" class="px-4 py-2.5 text-sm border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:text-white transition-colors duration-200 hover:border-gray-400 dark:hover:border-gray-500">
              <option value="7">最近7天</option>
              <option value="30" selected>最近30天</option>
              <option value="90">最近90天</option>
              <option value="custom">自定义日期范围</option>
            </select>
            
            <!-- 自定义日期范围选择器 -->
            <div id="customDateRange" class="hidden flex gap-2">
              <input type="date" id="startDate" class="px-3 py-2.5 text-sm border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:text-white">
              <span class="text-gray-500 dark:text-gray-400 self-center">至</span>
              <input type="date" id="endDate" class="px-3 py-2.5 text-sm border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:text-white">
            </div>
            
            <!-- 项目筛选选择器 -->
            <select id="projectFilterSelector" class="px-4 py-2.5 text-sm border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:text-white transition-colors duration-200 hover:border-gray-400 dark:hover:border-gray-500">
              <option value="">所有项目</option>
            </select>
            
            <!-- 时长范围选择器 -->
            <select id="durationFilterSelector" class="px-4 py-2.5 text-sm border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:text-white transition-colors duration-200 hover:border-gray-400 dark:hover:border-gray-500">
              <option value="">所有时长</option>
              <option value="0-30">30分钟以下</option>
              <option value="30-60">30-60分钟</option>
              <option value="60-120">1-2小时</option>
              <option value="120+">2小时以上</option>
            </select>
            
            <!-- 应用筛选按钮 -->
            <button id="applyFiltersBtn" class="px-4 py-2.5 text-sm bg-primary-600 hover:bg-primary-700 text-white rounded-lg transition-colors duration-200 font-medium">
              应用筛选
            </button>
            
            <!-- 重置筛选按钮 -->
            <button id="resetFiltersBtn" class="px-4 py-2.5 text-sm bg-gray-500 hover:bg-gray-600 text-white rounded-lg transition-colors duration-200 font-medium">
              重置
            </button>
          </div>
        </div>
        
        <!-- 图表容器 -->
        <div class="relative">
          <div id="chartLoading" class="absolute inset-0 bg-white dark:bg-gray-800 bg-opacity-75 dark:bg-opacity-75 flex items-center justify-center z-10 hidden">
            <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-primary-500"></div>
          </div>
          <canvas id="sessionsChart" class="w-full h-80"></canvas>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- 编辑模态框 - 响应式设计 -->
<div id="editModal" class="fixed inset-0 bg-gray-900 bg-opacity-50 overflow-y-auto h-full w-full hidden z-50">
  <div class="relative top-4 sm:top-20 mx-auto p-4 sm:p-6 border w-11/12 sm:w-96 lg:w-[480px] max-w-md shadow-2xl rounded-xl bg-white dark:bg-gray-800 transform transition-all">
    <div class="mt-3">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-lg sm:text-xl font-semibold text-gray-900 dark:text-white">编辑学习记录</h3>
        <button type="button" id="closeEditModalBtn" class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 p-1 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
          <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      
      <form id="editForm" class="space-y-4 sm:space-y-6">
        <input type="hidden" id="editRecordId" />
        
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">学习日期</label>
          <input type="date" id="editDate" class="w-full border border-gray-300 dark:border-gray-600 rounded-lg px-4 py-3 text-sm dark:bg-gray-700 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent" required />
        </div>
        
        <div>
