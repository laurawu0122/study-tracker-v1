// æ˜¾ç¤ºåˆ†é¡µ
function displayPagination(pagination) {
    const paginationDiv = document.getElementById('userDataPagination');
    
    if (pagination.totalPages <= 1) {
        paginationDiv.innerHTML = '';
        return;
    }
    
    let paginationHtml = `
        <div class="flex items-center justify-between">
            <div class="text-sm text-gray-700 dark:text-gray-300">
                æ˜¾ç¤ºç¬¬ ${(pagination.currentPage - 1) * pagination.itemsPerPage + 1} åˆ° 
                ${Math.min(pagination.currentPage * pagination.itemsPerPage, pagination.totalItems)} æ¡ï¼Œ
                å…± ${pagination.totalItems} æ¡è®°å½•
            </div>
            <div class="flex space-x-2">
    `;
    
    // ä¸Šä¸€é¡µ
    if (pagination.currentPage > 1) {
        paginationHtml += `
            <button onclick="changePage(${pagination.currentPage - 1})" 
                    class="px-3 py-1 text-sm bg-gray-200 text-gray-700 rounded hover:bg-gray-300">
                ä¸Šä¸€é¡µ
            </button>
        `;
    }
    
    // é¡µç 
    const startPage = Math.max(1, pagination.currentPage - 2);
    const endPage = Math.min(pagination.totalPages, pagination.currentPage + 2);
    
    for (let i = startPage; i <= endPage; i++) {
        if (i === pagination.currentPage) {
            paginationHtml += `
                <span class="px-3 py-1 text-sm bg-blue-600 text-white rounded">${i}</span>
            `;
        } else {
            paginationHtml += `
                <button onclick="changePage(${i})" 
                        class="px-3 py-1 text-sm bg-gray-200 text-gray-700 rounded hover:bg-gray-300">
                    ${i}
                </button>
            `;
        }
    }
    
    // ä¸‹ä¸€é¡µ
    if (pagination.currentPage < pagination.totalPages) {
        paginationHtml += `
            <button onclick="changePage(${pagination.currentPage + 1})" 
                    class="px-3 py-1 text-sm bg-gray-200 text-gray-700 rounded hover:bg-gray-300">
                ä¸‹ä¸€é¡µ
            </button>
        `;
    }
    
    paginationHtml += '</div></div>';
    paginationDiv.innerHTML = paginationHtml;
}

